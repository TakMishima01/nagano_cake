<div class="container py-5">
  <div class="row">
    <div class="col-8 offset-1">
      <h3 class="my-5">ショッピングカート</h3>
    </div>
    <div class="col-3 my-5 text-right">
      <%= link_to 'カートを空にする', destroy_all_path, method: :delete ,class: "btn btn-danger px-4", data: {confirm: "本当に空にしますか？"} %>
    </div>
  </div>
  <table class="table table-hover table-bordered bg-white shadow-sm">
    <thead>
      <tr>
        <th scope="col">商品名</th>
        <th scope="col">単価（税込）</th>
        <th scope="col">数量</th>
        <th scope="col">小計</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= image_tag cart_item.item.image, class: "cart_item_img shadow-sm rounded mr-2" %>
            <%= cart_item.item.name %>
          </td>
          <td class="text-dark align-middle">
            <%= cart_item.item.add_tax_price.to_s(:delimited) %>
          </td>
          <td class="align-middle">
            <%= form_with model: cart_item, url: cart_item_path(cart_item), method: :patch, local: true do |f|%>
              <%= f.select :amount, *[1..10], selected: cart_item.amount %>
              <%= f.submit "変更", class: "btn btn-success" %>
            <% end %>
          </td>
          <td class="align-middle">
            <%= cart_item.subtotal.to_s(:delimited) %>
          </td>
          <td class="align-middle">
            <%= link_to '削除する', cart_item_path(cart_item), method: :delete ,class: "btn btn-danger px-4", data: {confirm: "アイテムを削除しますか？"}%>
          </td>
          <% @total +=  cart_item.subtotal %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="row">
    <div class="col-8 ml-3 my-3">
      <%= link_to '買い物を続ける', root_path,class: "btn btn-primary px-4" %>
    </div>
    <table class="table table-bordered col-3 my-3 text-end bg-white shadow-sm">
      <tbody>
        <td>合計金額</td>
        <td><%= @total.to_s(:delimited) %></td>
      </tbody>
    </table>
  </div>
  <div class="text-center my-3">
    <% if @cart_items.present? %>
      <%= link_to '情報入力に進む', new_order_path, class: "btn btn-success px-5" %>
    <% else %>
      <%= link_to '情報入力に進む', new_order_path, class: "btn btn-success disabled px-5" %>
    <% end %>
  </div>
</div>
