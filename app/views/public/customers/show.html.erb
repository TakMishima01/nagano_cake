<div class="container py-5">
  <div class="row">
    <div class="col-11 offset-1">
      <h3 class="mb-5">マイページ</h3>
    </div>
  </div>
  <div class="row mb-3 ml-4">
    <h3 class="col-2">登録情報</h3>
    <%= link_to '編集する', edit_customer_path(@customer), class: "btn btn-success px-4" %>
  </div>
  <div class="row mb-4 mx-5">
    <table class="table table-bordered bg-white shadow-sm">
      <tbody>
        <tr>
          <th scope="row">氏名</th>
          <td><%= @customer.last_name + " " + @customer.first_name %></td>
        </tr>
        <tr>
          <th scope="row">カナ</th>
          <td><%= @customer.last_name_kana + " " +  @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th scope="row">郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th scope="row">住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th scope="row">電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th scope="row">メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="row mt-5 ml-4">
    <h3 class="col-2">配送先</h3>
    <%= link_to '一覧を見る', addresses_path, class: "btn btn-primary px-4" %>
  </div>
  <div class="row mt-3 ml-4">
    <h3 class="col-2">注文履歴</h3>
    <%= link_to '一覧を見る', orders_path, class: "btn btn-primary px-4" %>
  </div>
</div>