<div class="container py-5">
  <div class="row py-4 col-11 offset-1 ">
    <h3 class="mb-3">配送先登録/一覧</h3>
  </div>
  <%= form_with model: @address, url: addresses_path, local: true do |f| %>
    <div class="form-group row my-3">
      <%= f.label :郵便番号（ハイフンなし）, class: "col-form-label col-sm-3" %>
      <div class="col-sm-4">
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "form-control mr-3" %>
      </div>
    </div>
    <div class="form-group row my-3">
      <%= f.label :住所, class: "col-form-label col-sm-3" %>
      <div class="col-sm-7">
        <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control mr-3" %>
      </div>
    </div>
    <div class="form-group row my-3">
      <%= f.label :宛名, class: "col-form-label col-sm-3" %>
      <div class="col-sm-4">
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control mr-3" %>
      </div>
      <%= f.submit '新規登録', class: "btn btn-success px-5 offset-2"%>
    </div>
  <% end %>
  <div class="row pt-3">
    <div class="col-5">
      <table class="table text-nowrap table-bordered">
        <thead>
          <tr>
            <th scope="col">郵便番号</th>
            <th scope="col">住所</th>
            <th scope="col">宛名</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <% @addresses.each do |address| %>
          <tbody>
            <tr>
              <td><%= address.postal_code %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
              <td>
                <%= link_to '編集する', edit_address_path(address), class: "btn btn-success"%>
                <%= link_to '削除する', address_path(address), method: :delete, class: "btn btn-danger", data: {confirm: "本当に削除しますか？"} %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>