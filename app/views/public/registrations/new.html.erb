<div class="container">
  <div class="row">
    <div class="col-auto my-5">
      <h3 class="bg-light px-4">新規会員登録</h3>
    </div>
  </div>
  <%= form_with model: @customer, url: customer_registration_path do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>


    <div class="form-group row">
      <%= f.label :名前, class: "col-form-label col-sm-2" %>
      <%= f.label :'(姓)', class: "col-form-label col-sm-1" %>
      <div class="col-sm-4">
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control" %>
      </div>
      <%= f.label :'(名)',class: "col-form-label col-sm-1" %>
      <div class="col-sm-4">
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :フリガナ, class: "col-form-label col-sm-2" %>
      <%= f.label :'(セイ)', class: "col-form-label col-sm-1" %>
      <div class="col-sm-4">
        <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "form-control" %>
      </div>
      <%= f.label :'(メイ)', class: "col-form-label col-sm-1" %>
      <div class="col-sm-4">
        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :メールアドレス, class: "col-form-label col-sm-3" %>
      <div class="col-sm-4">
        <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :郵便番号（ハイフンなし）, class: "col-form-label col-sm-3 pl-0" %>
      <div class="col-sm-4">
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "form-control" %>
    </div>
    </div>

    <div class="form-group row">
      <%= f.label :住所, class: "col-form-label col-sm-3" %>
      <div class="col-sm-4">
      <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control" %>
    </div>
    </div>

    <div class="form-group row">
      <%= f.label :電話番号（ハイフンなし）, class: "col-form-label col-sm-3" %>
      <div class="col-sm-4">
      <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", class: "form-control" %>
    </div>
    </div>

    <div class="form-group row">
      <%= f.label :'パスワード(6文字以上)', class: "col-form-label col-sm-3" %>
      <div class="col-sm-4">
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>
    </div>

    <div class="form-group row">
      <%= f.label :パスワード（確認用）, class: "col-form-label col-sm-3" %>
      <div class="col-sm-4">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>
    </div>

    <div class="row actions my-3">
      <div class="col-sm-3"></div>
      <div class="col-sm-3">
        <%= f.submit "新規登録", class: "btn btn-success btn-block" %>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-auto my-3">
      <h3 class="bg-light px-4">既に登録済みの方</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-11">
      <%= render "public/shared/links" %>
      からログインしてください。
    </div>
  </div>
</div>