<div class="container py-5">
  <div class="row">
    <div class="col-11 offset-1">
      <h3 class="mb-5">注文履歴一覧</h3>
    </div>
  </div>
  <table class="table table-hover table-bordered bg-white shadow-sm">
    <thead class="table-dark bg-secondary">
      <tr>
        <th scope="col">注文日</th>
        <th scope="col">配送先</th>
        <th scope="col">注文商品</th>
        <th scope="col">支払金額</th>
        <th scope="col">ステータス</th>
        <th scope="col">注文詳細</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td class="align-middle">
            <%= order.created_at.strftime('%Y/%m/%d') %>
          </td>
          <td class="align-middle">
            <%= "〒" + order.postal_code %><br>
            <%= order.address %><br>
            <%= order.name %>
          </td>
          <td class="align-middle">
            <% order.order_details.each do |order_detail| %>
              <%= order_detail.item.name%><br>
            <% end %>
          </td>
          <td class="align-middle">
            <%= order.total_payment.to_s(:delimited) %>
          </td>
          <td class="align-middle">
            <%= order.status_i18n %>
          </td>
          <td class="align-middle">
            <%= link_to '表示する', order_path(order.id), class: "btn btn-primary px-4" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>