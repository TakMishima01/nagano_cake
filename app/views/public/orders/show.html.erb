<div class="container py-5">
  <div class="row">
    <div class="col-11 offset-1">
      <h3 class="mb-5">注文履歴詳細</h3>
    </div>
  </div>
  <!--テーブルを横並びにする-->
  <div class="confirm_table">
    <!--注文情報の表示-->
    <div class="col-9">
      <h6 class="font-weight-bold">注文情報</h6>
      <table class="table table-bordered bg-white shadow-sm">
        <tbody>
          <tr>
            <th>注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td>
              <%= "〒" + @order.postal_code %><br>
              <%= @order.address %><br>
              <%= @order.name %>
            </td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td><%= @order.status_i18n %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <!--請求情報の表示-->
    <div class="col-3 ml-5">
      <h6 class="font-weight-bold">請求情報</h6>
      <table class="table table-bordered bg-white shadow-sm">
        <tbody>
          <tr>
            <th>商品合計</th>
            <td><%= (@order.total_payment - @order.shipping_cost).to_s(:delimited) %></td>
          </tr>
          <tr>
            <th>配送料</th>
            <td><%= @order.shipping_cost %></td>
          </tr>
          <tr>
            <th>ご請求額</th>
            <td><%= @order.total_payment.to_s(:delimited) %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="confirm_table">
  <!--注文内容の表示-->
    <div class="col-11">
      <h6 class="font-weight-bold">請求情報</h6>
      <table class="table table-bordered bg-white shadow-sm">
        <thead>
          <tr>
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_details.each do |order_detail| %>
            <tr>
              <td>
                <%= order_detail.item.name %>
              </td>
              <td>
                <%= order_detail.purchase_price_tax.to_s(:delimited) %>
              </td>
              <td>
                <%= order_detail.amount %>
              </td>
              <td>
                <%= (order_detail.purchase_price_tax * order_detail.amount).to_s(:delimited) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>