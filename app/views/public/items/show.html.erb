<div class="container">
  <div class="row">

    <%= render 'layouts/genre_tag', genres: @genres %>

    <div class="col-sm-5 mt-4">
      <%= image_tag @item.get_image(400,400) %>
    </div>

      <!-- Gallery item -->
    <div class="col-sm-4 col-md-5 col-lg-4 mt-4">
      <h3><%= @item.name %></h3>
      <h5><%= @item.introduction %></h5>
      <h3>￥<%= @item.add_tax_price %><small><small> (税込) </small></small></h3>
      <%= form_with model: @cart_item, url: cart_items_path, method: :post, local: true do |f|%>
        <%= f.hidden_field :item_id, :value => @item.id %>
        <%= f.hidden_field :customer_id, :value => current_customer.id %>
        <%= f.select :amount, *[1..10], { prompt: '個数選択' }, required: true %>&emsp;
        <%= f.submit 'カートに入れる', class: "btn btn-success px-5"%>
      <% end %>


  </div>
</div>
