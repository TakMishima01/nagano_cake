<div class="container-fluid">
  <div class="row">

    <div class="col-sm-2 my-4 mx-4" >
      <table class="table table-hover table-borderless border border-dark">
        <thead class="border border-dark">
          <tr>
            <th scope="col", class="text-center">ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td>
                <%= genre.name %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-sm-3 mt-4">
      <%= image_tag @item.get_image(400,400) %>
    </div>

      <!-- Gallery item -->
    <div class="col-6 mt-3">
      <h3><%= @item.name %></h3>
      <h5><%= @item.introduction %></h5>
      <h3>￥<%= add_tax_price.to_s(:delimited) %><small><small> (税込) </small></small></h3>
      <div>
        <label>販売ステータス</label>
        <%= @item.is_active ? '販売中' : '販売停止中' %>
      </div>
      <%= link_to '編集する', edit_admin_item_path(@item), class: "btn btn-success" %>
    </div>
  </div>
</div>
