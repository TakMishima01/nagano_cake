<div class="container-fluid">
  <div class="row">

    <div class="col-sm-2 my-4 mx-4" >
      <table class="table table-hover table-borderless border border-dark">
        <thead class="border border-dark">
          <tr>
            <th scope="col", class="text-center">ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td>
                <%= genre.name %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-sm-5 mt-4">
      <%= image_tag @item.get_image(400,400) %>
    </div>

      <!-- Gallery item -->
    <div class="col-sm-4 col-md-5 col-lg-4 mt-4">
      <h3><%= @item.name %></h3>
      <h5><%= @item.introduction %></h5>
      <h3>￥<%= add_tax_price.to_s(:delimited) %><small><small> (税込) </small></small></h3>
      <%= form_with model: @cart_item, url: cart_items_path(@cart_item), local: true do |f|%>
        <%= f.hidden_field :item_id, :value => @item.id %>
        <%= f.hidden_field :customer_id, :value => @customer.id %>
        <%= f.select :amount, *[1..10], { prompt: '個数選択' } %>
        <%= f.submit 'カートに入れる', class: "btn btn-success px-5"%>
      <% end %>


  </div>
</div>
