<div class="container">
  <div class="row">

    <div class="col-sm-2 my-4 mx-4" >
      <table class="table table-hover table-borderless border border-dark">
        <thead class="border border-dark">
          <tr>
            <th scope="col", class="text-center">ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td>
                <%= link_to genre.name, items_path(genre_id: genre.id), class: "text-dark" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

      <div class="col-sm-9">
        <h2 class="ml-4 my-4 mx-4"><%= @title + "一覧" %><small>（全 <%= @items_count %> 件）</small></h2>
      <!-- Gallery item -->
        <div class="card-group">
          <% @items.each do |item| %>
          <%= link_to item_path(item), class: "col-xl-3 col-lg-4 col-md-6 mb-4" do %>
            <!--<div class="col-xl-3 col-lg-4 col-md-6 mb-4">-->
              <div class="bg-white rounded shadow-sm">
                <%= image_tag item.image, class: "item_img card-img-top img-thumbnail" %>
                <div class="py-4 px-2">
                  <h7 class="text-dark text-nowrap"><%= item.name %></h7>
                  <p class="small text-muted mb-0">￥<%= item.add_tax_price %></p>
                </div>
              </div>
            <!--</div>-->
          <% end %>
          <% end %>
      <!-- End -->
          <div class ="mx-auto" style="width: 300px;">
            <%= paginate @items %>
          </div>
        </div>
      </div>
  </div>
</div>
