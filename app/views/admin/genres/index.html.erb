<div class="container">
  <div class="row py-4 col-11 offset-1 ">
    <h3 class="bg-light">ジャンル一覧・追加</h3>
  </div>
  <%= form_with model: @genre, url: admin_genres_path, class: "form-inline", local: true do |f| %>
    <div class="form-group my-3">
      <label class="mr-3">ジャンル名</label>
      <%= f.text_field :name, class: "form-control mr-3" %>
    </div>
    <%= f.submit '新規登録', class: "btn btn-success"%>
  <% end %>
  <div class="row pt-3">
    <div class="col-5">
      <table class="table table-hover mb-5">
        <thead class="thead-light">
          <tr>
            <th scope="col">
              <div class="text-center">ジャンル</div>
            </th>
            <th scope="col"></th>
          </tr>
        </thead>
        <% @genres.each do |genre| %>
          <tbody>
            <tr>
              <td>
                <%= genre.name %>
              </td>
              <td>
                <div class="text-right">
                  <%= link_to '編集する', edit_admin_genre_path(genre), class: "btn btn-success" %>
                </div>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>