<div class="container">
  <div class="row py-4 col-11 offset-1 ">
    <h3 class="bg-light">ジャンル編集</h3>
  </div>
  <%= form_with model: @genre, url: admin_genre_path(@genre), class: "form-inline", local: true do |f| %>
    <div class="form-group my-3">
      <label class="mr-3">ジャンル名</label>
      <%= f.text_field :name, class: "form-control mr-3" %>
    </div>
    <%= f.submit '変更を保存', class: "btn btn-success"%>
  <% end %>
</div>