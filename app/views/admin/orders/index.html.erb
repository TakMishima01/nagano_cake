<div class="container">
  <div class="row py-4">
    <div class="col-10">
      <h3 class="px-4">注文履歴一覧</h3>
    </div>
  </div>

  <table class="table table-hover table-borderless">
    <thead>
      <tr>
        <th scope="col">購入日時</th>
        <th scope="col">購入者</th>
        <th scope="col">注文個数</th>
        <th scope="col">注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td>
            <%= link_to admin_order_path(order), class: "text-reset" do %>
              <%= order.created_at.strftime('%Y/%m/%d %H:%M') %>
            <% end %>
          </td>
          <td class="text-dark">
            <%= order.customer.last_name + order.customer.first_name %>
          </td>
          <td>
            <% @sum_amount = 0 %>
            <% order.order_details.each do |order_detail| %>
              <% @sum_amount += order_detail.amount %>
            <% end %>
            <%= @sum_amount %>
          </td>
          <td>
            <%= order.status_i18n %>
          </td>
        </tr>

      <% end %>
    </tbody>
  </table>
  <div class ="mx-auto" style="width: 300px;">
    <%= paginate @orders %>
  </div>

</div>