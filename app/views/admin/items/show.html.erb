<div class="container">
  <div class="row py-4 mt-3 col-11 offset-1 ">
    <h3 class="bg-light px-4">商品詳細</h3>
  </div>
  <div class="row">
    <div class="col-5 mt-3">
      <%= image_tag @item.get_image(250,250) %>
    </div>
    <div class="col-7 mt-3">
      <div>
      <label>商品名</label>
      <%= @item.name %>
      </div>
      <div>
        <label>商品説明</label>
        <%= @item.introduction %>
      </div>
      <div>
        <label>ジャンル</label>
        <%= @item.genre.name %>
      </div>
      <div>
        <label>税込価格<br>(税抜価格)</label>
        <%= add_tax_price.to_s(:delimited) %>
        ( <%= @item.price %> )円
      </div>
      <div>
        <label>販売ステータス</label>
        <%= @item.is_active ? '販売中' : '販売停止中' %>
      </div>
      <%= link_to '編集する', edit_admin_item_path(@item), class: "btn btn-success" %>
    </div>
  </div>
</div>