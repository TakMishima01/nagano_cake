<div class="container">
  <div class="row py-4 mt-3 col-11 offset-1 float-right">
    <h3 class="bg-light px-4">商品詳細</h3>
  </div>
  <div class="row">
    <div class="col-4 mt-3 offset-1">
      <%= image_tag @item.get_image(250,250) %>
    </div>

    <table class="table table-borderless table-sm col-6 ml-0 mt-3">
    <tbody>
        <tr>
          <th class="col-2">商品名</th>
          <td class="col-3"><h5><%= @item.name %></h5></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><h5><%= @item.introduction %></h5></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><h5><%= @item.genre.name %></h5></td>
        </tr>
        <tr>
          <th>税込価格<br>(税抜価格)</th>
          <td class="align-middle">
            <h5><%= @add_tax.to_s(:delimited) %>( <%= @item.price %> )円</h5>
          </td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <td>
            <% if @item.is_active == true %>
              <h5 class="text-success font-weight-bold"><%= @item.is_active ? '販売中' : '販売停止中' %></h5>
            <% else %>
              <h5 class="text-black-50 font-weight-bold"><%= @item.is_active ? '販売中' : '販売停止中' %></h5>
            <% end %>
          </td>
        </tr>
        <tr>
          <td colspan="2">
            <div></div><br>
            <%= link_to '編集する', edit_admin_item_path(@item), class: "btn btn-success btn-lg px-5" %>
          </td>
        </tr>
    </tbody>
  </table>
  </div>
</div>