<div class="container py-5">
  <div class="row py-4">
    <div class="col-10">
      <h3 class="px-4">商品一覧</h3>
    </div>
    <div class="col-2">
      <%= link_to new_admin_item_path do %>
      <button type="button" class="btn btn-outline-secondary btn-lg rounded-circle p-0 shadow-sm " style="width:2rem;height:2rem;">
        <i class="fa-solid fa-plus"></i>
      </button>

      <% end %>
    </div>
  </div>

  <table class="table table-hover bg-white col-10 offset-1 shadow-sm">
    <thead class="table-dark bg-secondary">
      <tr>
        <th scope="col">商品ID</th>
        <th scope="col">商品名</th>
        <th scope="col">税抜価格</th>
        <th scope="col">ジャンル</th>
        <th scope="col">ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td>
            <%= item.id %>
          </td>
          <td class="text-dark">
            <%= link_to admin_item_path(item), class: "text-reset" do %>
            <%= item.name %>
            <% end %>
          </td>
          <td>
            <%= item.price.to_s(:delimited) %>
          </td>
          <td>
            <%= item.genre.name %>
          </td>
          <td>
            <% if item.is_active == true %>
              <div class="text-success font-weight-bold"><%= item.is_active ? '販売中' : '販売停止中' %></div>
            <% else %>
              <div class="text-black-50 font-weight-bold"><%= item.is_active ? '販売中' : '販売停止中' %></div>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class ="mx-auto pt-5" style="width: 300px;">
    <%= paginate @items %>
  </div>

</div>