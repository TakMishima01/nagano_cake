<div class="container">
  <div class="row py-4">
    <div class="col-10 mb-3">
      <h3 class="px-4">会員一覧</h3>
    </div>

  <table class="table table-hover col-10 offset-2 mx-auto">
    <thead class="table-secondary">
      <tr>
        <th scope="col">会員ID</th>
        <th scope="col">氏名</th>
        <th scope="col">メールアドレス</th>
        <th scope="col">ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td>
            <%= customer.id %>
          </td>
          <td class="text-dark">
            <%= link_to admin_customer_path(customer), class: "text-reset" do %>
            <%= customer.last_name + customer.first_name %>
            <% end %>
          </td>
          <td>
            <%= customer.email %>
          </td>
          <td>
            <%= customer.is_deleted ? '退会' : '有効' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class ="mx-auto" style="width: 300px;">
    <%= paginate @customers %>
  </div>

</div>